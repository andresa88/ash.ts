{
  "name": "ash.ts",
  "license": "MIT",
  "version": "0.9.7",
  "description": "Typescript port of Ash - Entity Component System framework",
  "keywords": [
    "ash",
    "typescript",
    "framework",
    "game",
    "entity",
    "component",
    "system"
  ],
  "homepage": "https://ash.ts.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/icek/ash.ts"
  },
  "bugs": {
    "url": "https://github.com/icek/ash.ts/issues"
  },
  "author": "Grzegorz Michlicki <grzegorz@michlicki.pl>",
  "contributors": [],
  "main": "dist/ash.ts.js",
  "browser": "dist/ash.ts.min.js",
  "module": "dist/ash.ts.mjs",
  "types": "dist/ash.ts.d.ts",
  "typings": "dist/ash.ts.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "npm-run-all build:clean build:rollup build:prettier",
    "build:clean": "rimraf dist",
    "build:rollup": "rollup -c",
    "build:prettier": "prettier --write './dist/ash.ts?(.|.es5).?(m)js' --loglevel error",
    "predts": "echo-cli '\nBundling typings...'",
    "dts": "npm-run-all dts:bundle dts:clean dts:prettier dts:tslint",
    "dts:bundle": "dts-bundle-generator -o dist/ash.ts.d.ts --umd-module-name ash dist/types/index.d.ts",
    "dts:clean": "rimraf dist/types",
    "dts:prettier": "prettier --write 'dist/ash.ts.d.ts' --loglevel error",
    "dts:tslint": "tslint -c tslint.json --fix dist/ash.ts.d.ts",
    "predist": "echo-cli '======= Build start ======='",
    "dist": "npm-run-all build dts",
    "postdist": "echo-cli '\n======= Build end ======='",
    "docs": "npm-run-all docs:clean docs:typedoc",
    "docs:clean": "rimraf docs",
    "docs:typedoc": "typedoc --options typedoc.json ./src/index.ts",
    "tslint": "tslint -p tsconfig.json",
    "pretest": "rimraf reports",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "test-changed": "jest -o",
    "test-watch-changed": "jest --watch",
    "test-coverage": "jest --coverage",
    "prepack": "rimraf ash.ts-*.tgz"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "dts-bundle-generator": "^3.0.0",
    "echo-cli": "^1.0.8",
    "jest": "^24.7.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "^0.21.0",
    "touch": "^3.1.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "tslint": "^5.16.0",
    "tslint-config-airbnb-base": "^0.3.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "ash.ts": "<rootDir>/src"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "./tests/tsconfig.json"
      }
    }
  }
}
