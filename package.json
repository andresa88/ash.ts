{
  "name": "ash.ts",
  "license": "MIT",
  "version": "0.9.0",
  "description": "Typescript port of Ash - Entity Component System framework",
  "author": "Grzegorz Michlicki <grzegorz@michlicki.pl>",
  "repository": {
    "type": "git",
    "url": "https://github.com/icek/ash.ts"
  },
  "scripts": {
    "clean": "rimraf dist docs",
    "build:rollup": "rollup -c",
    "build:cleanup": "prettier --write './dist/ash.ts?(.|.es5).?(m)js'",
    "build": "npm run build:rollup && npm run build:cleanup",
    "dts:bundle": "dts-bundle --configJson dtsbundle.json",
    "dts:cleanup": "prettier --write ./dist/ash.ts.d.ts && rimraf dist/types",
    "dts": "npm run dts:bundle && npm run dts:cleanup",
    "docs": "typedoc --options typedoc.js ./ash/index.ts && touch docs/.nojekyll",
    "publish": "npm run clean && npm run build && npm run dts && npm run docs",
    "lint": "tslint -p ash/tsconfig.json",
    "test": "karma start ./karma.conf.js"
  },
  "main": "dist/ash.ts.js",
  "browser": "dist/ash.ts.min.js",
  "module": "dist/ash.ts.mjs",
  "typescript": {
    "main": "ash/index.ts"
  },
  "types": "dist/ash.ts.d.ts",
  "typings": "dist/ash.ts.d.ts",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "dts-bundle": "^0.7.2",
    "file": "^0.2.2",
    "karma": "^3.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sinon": "^1.0.5",
    "mocha": "^5.2.0",
    "prettier": "^1.14.2",
    "prettier-tslint": "^0.4.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.64.1",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "sinon": "^6.1.5",
    "touch": "^3.1.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb-base": "^0.2.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1"
  }
}
