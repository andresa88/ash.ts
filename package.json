{
  "name": "ash.ts",
  "license": "MIT",
  "version": "0.9.3",
  "description": "Typescript port of Ash - Entity Component System framework",
  "author": "Grzegorz Michlicki <grzegorz@michlicki.pl>",
  "repository": {
    "type": "git",
    "url": "https://github.com/icek/ash.ts"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "postbuild": "prettier --write './dist/ash.ts?(.|.es5).?(m)js' --loglevel error",
    "predts": "echo-cli '\nBundling typings...'",
    "dts": "dts-bundle-generator -o dist/ash.ts.d.ts --umd-module-name ash dist/types/index.d.ts",
    "postdts": "rimraf dist/types",
    "predist": "echo-cli '======= Build start ======='",
    "dist": "npm-run-all build dts",
    "postdist": "echo-cli '\n======= Build end ======='",
    "predocs": "rimraf docs",
    "docs": "typedoc --options typedoc.js ./ash/index.ts",
    "postdocs": "touch docs/.nojekyll",
    "lint": "tslint -p tsconfig.json",
    "pretest": "rimraf reports",
    "test": "karma start ./karma.conf.js"
  },
  "main": "dist/ash.ts.js",
  "browser": "dist/ash.ts.min.js",
  "module": "dist/ash.ts.mjs",
  "types": "dist/ash.ts.d.ts",
  "typings": "dist/ash.ts.d.ts",
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/parcel-env": "0.0.0",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "dts-bundle-generator": "^1.6.1",
    "echo-cli": "^1.0.8",
    "file": "^0.2.2",
    "karma": "^3.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^3.0.13",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "prettier-tslint": "^0.4.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.64.1",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "sinon": "^6.1.5",
    "touch": "^3.1.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb-base": "^0.2.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1"
  }
}
