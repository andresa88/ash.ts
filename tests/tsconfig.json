{
  "compileOnSave": false,
  "compilerOptions": {

    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,

    "strict": false,

    "suppressImplicitAnyIndexErrors": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "baseUrl": ".",

    "paths": {
      "ash.ts": ["../ash"]
    }
  },
  "include": [
    "../ash/**/*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "../ash/io/**/*.ts",
    "./io/**/*.ts"
  ]
}
