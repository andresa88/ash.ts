{
  "compileOnSave": false,
  "compilerOptions": {

    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,

    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "./tests",
    "./src/ash/io",
    "./src/examples"
  ]
}
